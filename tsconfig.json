{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "outDir": "build"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}